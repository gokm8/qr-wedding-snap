generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Photo {
  id         String   @id @default(cuid())
  filename   String   // Original filename fra bruger
  path       String   // Public URL til billede
  createdAt  DateTime @default(now())
  uploadedBy String  // Navn eller identifier for uploader
  bucketPath String   @unique // Storage path i Supabase
  fileSize   Int?     // Bytes - nyttig til at overv√•ge storage
  mimeType   String?  // image/jpeg, image/png - god til validation
  
  @@map("photos")
}