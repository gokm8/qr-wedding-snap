####################################
# üåê App Configuration
####################################

# The public URL of the app (used in links, redirects etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000


####################################
# üìß Email Configuration
####################################

# SMTP server (e.g. smtp.gmail.com for Gmail)
EMAIL_HOST=smtp.example.com

# SMTP port (465 for SSL, 587 for TLS)
EMAIL_PORT=587

# Email user (often the same as NOTIFICATION_EMAIL)
EMAIL_USER=your-email@example.com

# App-specific password (NOT your regular password)
EMAIL_PASSWORD=your-app-specific-password

# Email to receive notifications from the app
NOTIFICATION_EMAIL=notifications@example.com


####################################
# üß™ Supabase Configuration
####################################

# Supabase public client config - can be used in frontend
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase server-side config (identical to the above but used internally)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Service Role Key - used only on the server side for privileged operations
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

####################################
# üõ¢Ô∏è Database Configuration (Prisma)
####################################

# Connection string for use in the app (via Supabase pooler)
DATABASE_URL="postgresql://postgres.your-project-id:password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct DB connection - used by Prisma CLI (e.g. for migrations)
DIRECT_URL="postgresql://postgres.your-project-id:password@aws-0-region.pooler.supabase.com:5432/postgres" 